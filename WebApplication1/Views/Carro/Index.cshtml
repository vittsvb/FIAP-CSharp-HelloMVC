@model IEnumerable<WebApplication1.Models.CarroModel>

@{
    ViewBag.Title = "Index";
}

<h2>Carros</h2>

<table class="table">
    <tr>
        <th>@Html.DisplayNameFor(m=>m.Id)</th>
        <th>@Html.DisplayNameFor(m => m.Modelo)</th>
        <th>@Html.DisplayNameFor(m => m.Ano)</th>
        <th>@Html.DisplayNameFor(m => m.Placa)</th>
        <th></th>
    </tr>
    @foreach (var item in Model) {

        <tr>
            <td>@Html.DisplayFor(modelitem => item.Id)</td>
            <td>@Html.DisplayFor(modelitem => item.Modelo)</td>
            <td>@Html.DisplayFor(modelitem => item.Ano)</td>
            <td>@Html.DisplayFor(modelitem => item.Placa)</td>
            <td>@Html.ActionLink("Editar","Edit", new {id=item.Id})</td>

        </tr>
    }

</table>

